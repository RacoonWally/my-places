{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["esnext"],
    "types": [],
    "strict": true,
    "moduleResolution": "Node",
    "paths": {
      "@shared-types/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}